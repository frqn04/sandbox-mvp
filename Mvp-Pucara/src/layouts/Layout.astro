---
import '../assets/styles/global.css';
import '../assets/styles/navbar.css';
import '../assets/styles/footer.css';

import Navbar from '../components/navbar.astro';
import Footer from '../components/footer.astro';
export interface Props {
	title: string;
	description?: string;  // Hacemos la descripción opcional para SEO
}

const { title, description = "Pucará Gaming: esports y entretenimiento digital en Argentina" } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Otros meta tags para SEO -->
		<meta name="robots" content="index, follow">
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:image" content="/og-image.jpg" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />

		<!-- Fuentes -->
		<link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap" rel="stylesheet">
		
		<!-- Font Awesome -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
	</head>
	<body class="font-ubuntu leading-relaxed bg-dark text-light">
		<header>
			<Navbar />
		</header>

		<!-- Espaciador global para compensar el navbar fijo -->
		<div class="navbar-global-spacer"></div>

		<slot />

		<Footer />

		<script>
			// Script para detectar scroll y cambiar la apariencia del navbar
			document.addEventListener('DOMContentLoaded', function() {
				const navbar = document.querySelector('.navbar');

				if (navbar) {
					window.addEventListener('scroll', function() {
						if (window.scrollY > 50) {
							navbar.classList.add('scrolled');
						} else {
							navbar.classList.remove('scrolled');
						}
					});
				} else {
					console.warn("No se encontró el elemento navbar");
				}
			});
		</script>
	</body>
</html>

<style is:global>
	:root {
		--primary-color: #FF5722;  
		--dark-color: #000000;     
		--light-color: #FFFFFF;    
		--transition: all 0.3s ease;
	}
</style>

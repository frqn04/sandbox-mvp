<script>
  // Enfoque simple y directo para el menú móvil
  let isMenuOpen = false;
  let menuButton: HTMLElement | null = null;
  let mobileMenu: HTMLElement | null = null;
  let overlay: HTMLElement | null = null;

  function initMobileMenu() {
    // Obtener elementos
    menuButton = document.getElementById('mobile-menu-btn');
    mobileMenu = document.getElementById('mobile-menu');
    overlay = document.getElementById('mobile-overlay');

    if (!menuButton || !mobileMenu || !overlay) {
      console.warn('Elementos del menú móvil no encontrados');
      return;
    }

    // Asegurar estado inicial cerrado
    closeMenuImmediate();

    // Event listeners simples
    menuButton.onclick = function(e) {
      e.stopPropagation();
      toggleMenu();
    };

    overlay.onclick = function(e) {
      e.stopPropagation();
      closeMenu();
    };

    // Cerrar con links del menú móvil
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.onclick = function() {
        setTimeout(() => closeMenu(), 100); // Pequeño delay para la navegación
      };
    });

    // Cerrar con ESC
    document.onkeydown = function(e) {
      if (e.key === 'Escape' && isMenuOpen) {
        closeMenu();
      }
    };

    console.log('Menú móvil inicializado');
  }

  function toggleMenu() {
    if (isMenuOpen) {
      closeMenu();
    } else {
      openMenu();
    }
  }

  function openMenu() {
    if (!mobileMenu || !overlay || !menuButton || isMenuOpen) return;

    console.log('Abriendo menú');
    isMenuOpen = true;

    // Mostrar menú y overlay
    mobileMenu.style.transform = 'translateX(0)';
    overlay.style.opacity = '1';
    overlay.style.pointerEvents = 'auto';
    
    // Transformar hamburger en X
    menuButton.classList.add('active');
    
    // Bloquear scroll
    document.body.style.overflow = 'hidden';
  }

  function closeMenu() {
    if (!mobileMenu || !overlay || !menuButton || !isMenuOpen) return;

    console.log('Cerrando menú');
    isMenuOpen = false;

    // Ocultar menú y overlay
    mobileMenu.style.transform = 'translateX(-100%)';
    overlay.style.opacity = '0';
    overlay.style.pointerEvents = 'none';
    
    // Transformar X de vuelta en hamburger
    menuButton.classList.remove('active');
    
    // Restaurar scroll
    document.body.style.overflow = '';
  }

  function closeMenuImmediate() {
    if (!mobileMenu || !overlay || !menuButton) return;

    isMenuOpen = false;
    mobileMenu.style.transform = 'translateX(-100%)';
    overlay.style.opacity = '0';
    overlay.style.pointerEvents = 'none';
    menuButton.classList.remove('active');
    document.body.style.overflow = '';
  }

  // Inicializar cuando el DOM esté listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileMenu);
  } else {
    initMobileMenu();
  }

  // Reinicializar en navegación de Astro
  document.addEventListener('astro:page-load', () => {
    setTimeout(initMobileMenu, 100);
  });
</script>

---
import Layout from "../../layouts/Layout.astro";
import { getAllTeams } from "../../data/teams";

// Obtener todos los equipos desde el archivo de datos centralizado
const teams = getAllTeams();
---

<Layout 
    title="Equipos - Pucará Gaming | Dota 2, Street Fighter y Más"
    description="Conoce todos los equipos de Pucará Gaming. Nuestros roster profesionales de Dota 2, Street Fighter 6, Tekken 8 y League of Legends. Los mejores jugadores argentinos compitiendo al más alto nivel."
    keywords="equipos pucara gaming, dota 2 team, street fighter team, tekken team, league of legends, roster gaming, jugadores profesionales argentina"
>
  <main class="font-ubuntu min-h-screen bg-dark text-light">
    
    <section class="text-center py-20">
      <div class="max-w-6xl mx-auto px-5">
        <h1 class="text-4xl md:text-6xl font-bold uppercase tracking-wider mb-6 bg-gradient-to-r from-primary to-orange-400 bg-clip-text text-transparent drop-shadow-lg">
          NUESTROS EQUIPOS
        </h1>
        
        <p class="text-lg md:text-xl text-white/80 mb-12 max-w-3xl mx-auto">
          Conocé a los profesionales que representan a Pucará Gaming en los esports más competitivos
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-10">
          {teams.map((team) => (
            <a href={`/teams/${team.id}`} class="group relative rounded-3xl overflow-hidden shadow-xl transition-all duration-500 border-2 border-primary/20 hover:border-primary/60">
              <div class={`h-64 ${team.bgClass} flex flex-col justify-center items-center p-6`}>
                <img src={team.imagen} alt={team.nombre} class="w-32 h-32 md:w-40 md:h-40 rounded-full object-cover border-4 border-primary mb-6 shadow-lg transition-transform duration-300" />
                
                <h2 class="text-2xl md:text-3xl font-bold text-primary transition-transform duration-300">
                  {team.nombre}
                </h2>
              </div>
              
              <!-- Efecto hover -->
              <div class="absolute inset-0 bg-gradient-to-t from-primary/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

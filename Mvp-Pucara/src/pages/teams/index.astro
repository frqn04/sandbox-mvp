---
import Layout from "../../layouts/Layout.astro";

// Simulamos los datos globales de los equipos
const teamsData = [
  {
    id: "dota-2",
    nombre: "DOTA 2",
    emoji: "üõ°Ô∏è",
    bgClass: "bg-gradient-to-br from-dark to-gray-900/80",
    imagen:
      "https://images.pexels.com/photos/220453/pexels-photo-220453.jpeg?auto=compress&cs=tinysrgb&w=300&h=300&fit=crop",
  },
  {
    id: "street-fighter",
    nombre: "STREET FIGHTER",
    emoji: "üëä",
    bgClass: "bg-gradient-to-br from-gray-900/80 to-gray-800/90",
    imagen:
      "https://images.pexels.com/photos/1239291/pexels-photo-1239291.jpeg?auto=compress&cs=tinysrgb&w=300&h=300&fit=crop",
  },
  {
    id: "fifa",
    nombre: "FIFA",
    emoji: "‚öΩ",
    bgClass: "bg-gradient-to-br from-dark to-gray-900/80",
    imagen:
      "https://images.pexels.com/photos/1484794/pexels-photo-1484794.jpeg?auto=compress&cs=tinysrgb&w=300&h=300&fit=crop",
  },
];
---

<Layout title="Nuestros Equipos">
  <main class="min-h-screen pt-20 bg-dark text-light">
    <section class="text-center py-32">
      <div class="max-w-6xl mx-auto px-5">
        <h1
          class="text-6xl font-bold uppercase tracking-wider mb-10 bg-gradient-to-r from-primary to-orange-400 bg-clip-text text-transparent drop-shadow-lg"
        >
          NUESTROS EQUIPOS
        </h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
          {
            teamsData.map((team) => (
              <a
                href={`/teams/${team.id}`}
                class="group relative rounded-3xl overflow-hidden shadow-xl hover:scale-105 transition-all duration-500"
              >
                <div
                  class={`h-80 ${team.bgClass} flex flex-col justify-center items-center`}
                >
                  <img
                    src={team.imagen}
                    alt={team.nombre}
                    class="w-40 h-40 rounded-full object-cover border-4 border-primary mb-5 shadow-lg"
                  />
                  <h2 class="text-3xl font-bold text-primary group-hover:scale-110 transition-transform duration-300">
                    {team.nombre}
                  </h2>
                  <div class="text-4xl mt-2">{team.emoji}</div>
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </section>
  </main>
</Layout>
